<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.subgraph.vega.application.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.subgraph.vega.application.application"
            name="Subgraph Vega">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/vega-icon-100x100.png">
         </property>
         <property
               name="appName"
               value="Subgraph Vega">
         </property>
         <property
               name="aboutImage"
               value="icons/vega_small.png">
         </property>
         <property
               name="aboutText"
               value="Copyright 2011 Subgraph Technologies, Inc. http://www.subgraph.com">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.subgraph.vega.commands.category.workspaces"
            name="Workspaces">
      </category>
      <command
            categoryId="com.subgraph.vega.commands.category.workspaces"
            id="com.subgraph.vega.commands.newWorkspace"
            name="New Workspace">
      </command>
      <command
            categoryId="com.subgraph.vega.commands.category.workspaces"
            id="com.subgraph.vega.commands.switchWorkspace"
            name="Switch Workspace">
      </command>
      <command
            categoryId="com.subgraph.vega.commands.category.workspaces"
            id="com.subgraph.vega.commands.resetWorkspace"
            name="Reset Workspace">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.subgraph.vega.application.workspaces.NewWorkspaceHandler"
            commandId="com.subgraph.vega.commands.newWorkspace">
      </handler>
      <handler
            class="com.subgraph.vega.application.workspaces.SwitchWorkspaceHandler"
            commandId="com.subgraph.vega.commands.switchWorkspace">
      </handler>
      <handler
            class="com.subgraph.vega.application.workspaces.ResetWorkspaceHandler"
            commandId="com.subgraph.vega.commands.resetWorkspace">
         <enabledWhen>
            <with
                  variable="vega.workspaceLockState">
               <equals
                     value="unlocked">
               </equals>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               ratio="0.5"
               relationship="fast">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="File">
            <command
                  commandId="com.subgraph.vega.commands.resetWorkspace"
                  label="Reset Current Workspace"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.subgraph.vega.application.workspaces.WorkspaceLockStateSourceProvider">
         <variable
               name="vega.workspaceLockState"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
